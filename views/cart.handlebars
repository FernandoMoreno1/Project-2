<div class="wrapper" style="margin:4%;">
    <div id="table" class="bg-white rounded">
        <div class="d-md-flex align-items-md-center px-3 pt-3">
            <div class="d-flex flex-column">
                <div class="h4 font-weight-bold">Your cart</div>
            </div>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table activitites">
                <thead>
                    <tr>
                        <th scope="col" class="text-uppercase header">item</th>
                        <th scope="col" class="text-uppercase">Quantity</th>
                        <th scope="col" class="text-uppercase">price each</th>
                        <th scope="col" class="text-uppercase">total</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items as |item|}}
                    <tr>
                        
                            <td class="item">
                            <div class="d-flex">
                                <div class="pl-2"> {{name}}<div class="text-uppercase new"><span class="fas fa-star"></span>new</div>
                                    <div class="d-flex flex-column justify-content-center">
                                        <div class="text-muted">{{description}}</div>
                                    </div>
                                </div>
                        </td>
                        <td>{{quantity}}</td>
                        <td class="font-weight-bold"> {{price}} <div class="close">&times;</div> <button class="d-flex justify-content-end btn border"> Save</button> </td>
                        
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="text-muted"> <button class="btn" type="button" data-toggle="collapse" data-target="#table" aria-expanded="false" aria-controls="table"> Hide <span class="fas fa-minus"></span> </button> </div>
        <div class="d-flex flex-column justify-content-end align-items-end">
            <div class="d-flex px-3 pr-md-5 py-1 subtotal">
                <div class="px-4">Subtotal</div>
                <div class="h5 font-weight-bold px-md-2">$1,340</div>
            </div>
            <div class="text-muted tag"> +add more products <span class="fas fa-shopping-cart pl-1"></span> </div>
        </div>
    </div>
</div>