
<div>
    {{#each items as |item|}}
    {{> menu-item item}}
    {{/each}}

    {{#if loggedIn}}
        <div class="center-form" style="padding:4%; margin:4%;">
            <div class="row">
                <div class="col-md-12">
                <h2>New Product</h2>
                <form class="new-product-form">
                    <div class="form-group">
                    <div class="form-group">
                        <label for="product-name"  class="font-title">Name</label>
                        <input class="form-control" name="product-name" type="text" >
                    </div>
                    <label for="product-price" class="font-title">Price</label>
                    <input class="form-control" name="product-price" type="number" >
                    </div>
                    <div class="form-group">
                    <label for="product-description"  class="font-title">Description</label>
                    <input class="form-control" name="product-description" type="text">
                    </div>
                    <div class="form-group" hidden>
                    <label for="product-restaurant_id" class="font-title">Restaurant</label>
                    <input class="form-control" name="product-restaurant_id" type="number" value="{{res_id}}">
                    </div>
                    <span class="text-muted"></span>
                    <br/>
                    <br/>
                    <button type="submit" class="btn btn-info btn-submit">Save <i class="fas fa-save"></i></button>
                </form>
                </div>
            </div>
            </div>
        {{/if}}

</div>

{{!-- this is where the items from the cart will show up --}}
<div class="select">

</div>

<script src="/javascript/product/add-product.js"></script>