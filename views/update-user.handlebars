<div class="card" style="margin:4%; padding: 4%;">
    <form class="user-update-form" id="user{{id}}">
        <div class="form-group">
            <label for="address-update">Address: </label>
            <input class="form-control" type="text" id="address-update" />
        </div>

        <div class="form-group">
            <label for="phone-update">Phone Number: </label>
            <input class="form-control" type="text" id="phone-update" />
        </div>

        <div class="form-group">
            <button class="btn btn-success" type="submit">Submit</button>
        </div>
    </form>

    {{#if isOwner}}
    <div>
        <a href="/restaurants/add-restaurant">Click Here to Add a New Restaurant</a>
    </div>
    {{/if}}

    {{#if isOwner}}
    <script src="/javascript/update-owner.js"></script>

    {{/if}}
</div>