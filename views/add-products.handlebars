<form class="new-restaurant-form" id="owner{{id}}">
    <div>
        <label for="restaurant-name">Restaurant Name: </label>
        <input type="text" id="restaurant-name" />
    </div>

    <div>
        <label for="restaurant-address">Address: </label>
        <input type="text" id="restaurant-address" />
    </div>

    <div>
        <label for="restaurant-phone_number">Phone Number: </label>
        <input type="text" id="restaurant-phone_number" />
    </div>

    <div>
        <label for="open_at">Open: </label>
        <input type="text" id="open_at" />
    </div>

    <div>
        <label for="close_at">Close: </label>
        <input type="text" id="close_at" />
    </div>

    <div>
        <button type="submit">Submit</button>
    </div>
</form>

<script src="/javascript/add-restaurant.js"></script>